{
  "rewrites": [
    {
      "source": "/:slug",
      "destination": "/:slug.php"
    }
  ],
  "redirects": [
    {
      "source": "../404/",
      "destination": "../404.html",
      "permanent": false
    },
    {
      "source": "/sampol/500/",
      "destination": "../500.html",
      "permanent": false
    }
  ],
  "headers": [
    {
      "source": "/(.*).php",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/x-httpd-php"
        }
      ]
    }
  ]
}
